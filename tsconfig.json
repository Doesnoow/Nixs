{
  "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "rootDir": "./src/",
      "outDir": "./dist/",
      "strict": true,
      "moduleResolution": "Node",
      "importHelpers": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "removeComments": true,
      "typeRoots": [
        "node_modules/@types",
        "src/types"
      ],
      "sourceMap": false,
      "baseUrl": "./"
  },
  "include": [
    "./**/*.ts",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "src/types/*",
    "dist"
  ],
}